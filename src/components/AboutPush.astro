---
import { Button } from '@/components/ui/button'
import { Input } from '@/components/ui/input'
import Large from './typography/Large.astro'
---

<section class="py-10sm:py-16 lg:py-20">
  <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
    <div
      class="text-center lg:flex lg:items-center lg:justify-between lg:text-left"
    >
      <Large>Get full access to Celebration kit</Large>

      <form action="#" method="POST" class="mt-8 px-10 lg:mt-0 lg:px-0">
        <div class="sm:flex sm:justify-center lg:justify-end">
          <div class="flex w-full max-w-sm items-center space-x-2">
            <Input type="email" placeholder="Email" />
            <Button type="submit">Subscribe</Button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
