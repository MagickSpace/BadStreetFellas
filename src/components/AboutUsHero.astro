---
import { getLangFromUrl, useTranslations } from '@/i18n/utils'
import H2 from './typography/H2.astro'
import Large from './typography/Large.astro'
import SmallText from './typography/SmallText.astro'
import { Image } from 'astro:assets'
import Termins from '@/assets/Termins.png'
import Car from '@/assets/Car.png'
import Companyserv from '@/assets/Companyserv.png'
import Garanty from '@/assets/Garanty.png'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section>
  <div class="mx-auto max-w-2xl text-center">
    <H2>{t('serv-tiitledop')}</H2>
    <Large>{t('serv-tiitledopdesc')}</Large>
  </div>
  <div class="container mx-auto px-6 py-10">
    <div class="mt-8 grid grid-cols-1 gap-8 md:grid-cols-2 xl:mt-12 xl:gap-12">
      <div class="rounded-xl border border-r-blue-100 p-6 dark:border-blue-900">
        <div class="md:-mx-4 md:flex md:items-start">
          <Image src={Termins} alt="" class="my-class" />

          <div class="mt-4 md:mx-4 md:mt-0">
            <H2>
              {t('serv-title5')}
            </H2>

            <SmallText>
              {t('serv-description5')}
            </SmallText>
          </div>
        </div>
      </div>

      <div class="rounded-xl border border-r-blue-100 p-6 dark:border-blue-900">
        <div class="md:-mx-4 md:flex md:items-start">
          <Image src={Car} alt="" class="my-class" />
          <div class="mt-4 md:mx-4 md:mt-0">
            <H2>
              {t('serv-title6')}
            </H2>

            <SmallText>
              {t('serv-description6')}
            </SmallText>
          </div>
        </div>
      </div>

      <div class="rounded-xl border border-r-blue-100 p-6 dark:border-blue-900">
        <div class="md:-mx-4 md:flex md:items-start">
          <Image src={Companyserv} alt="" class="my-class" />

          <div class="mt-4 md:mx-4 md:mt-0">
            <H2>
              {t('serv-title7')}
            </H2>

            <SmallText>
              {t('serv-description7')}
            </SmallText>
          </div>
        </div>
      </div>

      <div class="rounded-xl border border-r-blue-100 p-6 dark:border-blue-900">
        <div class="md:-mx-4 md:flex md:items-start">
          <Image src={Garanty} alt="" class="my-class" />

          <div class="mt-4 md:mx-4 md:mt-0">
            <H2>
              {t('serv-title8')}
            </H2>

            <SmallText>
              {t('serv-description8')}
            </SmallText>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
