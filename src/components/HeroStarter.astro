---
import Large from '@/components/typography/Large.astro'
import { Button } from '@/components/ui/button'
import H1 from '@/components/typography/H1.astro'
---

<section class="pt-10 sm:pt-16 lg:pt-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <H1>Real humans are here to help you building your brand</H1>
      <Large>
        Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet
        sint.
      </Large>
      <Button variant="link">
        <svg
          class="-ml-1 mr-2 h-5 w-5"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
          ></path>
        </svg>
        <a class="hover:text-emerald-500" href="/contacts">
          Contact our support
        </a>
      </Button>
    </div>
  </div>

  <div class="container mx-auto 2xl:px-12">
    <img
      class="mt-6 w-full"
      src="https://cdn.rareblocks.xyz/collection/celebration/images/team/4/group-of-people.png"
      alt=""
    />
  </div>
</section>
