---
import SmallText from './typography/SmallText.astro'
import { Button } from '@/components/ui/button'
import H2 from './typography/H2.astro'
import { Image } from 'astro:assets'
import Logo from '../assets/Logo.png'
---

<section class="py-10 sm:py-16 lg:py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div
      class="grid grid-cols-1 items-center gap-y-12 lg:grid-cols-2 lg:gap-x-24"
    >
      <div>
        <Image src={Logo} alt="" class="my-class" />
      </div>

      <div class="text-center lg:text-left">
        <H2>Grow business with connections.</H2>
        <SmallText>
          Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet
          sint. Velit officia consequat duis enim velit mollit. Exercitation
          veniam consequat sunt nostrud amet.
        </SmallText>
        <div class="mt-5">
          <Button variant="outline">
            <a class="hover:text-emerald-500" href="/about">Get Started</a>
          </Button>
          <Button variant="ghost">
            <a class="hover:text-emerald-500" href="/pricing">Our Pricing</a>
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>
